@{
    ViewData["Title"] = "Home Page";
}
<style>
    #sidebarMenu {
        width: 250px;
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        overflow-y: auto;
        z-index: 1000;
    }

    .carousel-inner img {
         /* Ekranın tamamını kaplar */
        object-fit: cover; /* Resmi konteynerin tamamına uyacak şekilde kırpar */
    }
    .navbar {
        z-index: 1100;
    }

    body {
        padding-top: 56px; /* Adjust for navbar height */
    }
</style>
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hamburger Heaven</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Custom Styling */
        .hero-section {
            background-image: url('https://source.unsplash.com/1600x900/?burger');
            background-size: cover;
            background-position: center;
            height: 60vh;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .card img {
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>

<body>
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <a href="#menu-section" class="btn btn-warning btn-lg mt-3">Explore Menu</a>
        </div>
    </div>

    <!-- Navbar -->    
        <div class="container">              
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
@*             <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#menu-section">Menu</a></li>
                    <li class="nav-item"><a class="nav-link" href="#about-section">About</a></li>                   
                </ul>
            </div> *@
        </div>
    
    <!-- Menu Section -->
    <div id="menu-section" class="container my-5">
        <h2 class="text-center mb-4">Our Menu</h2>
        <div class="row">
            <!-- Example of a Menu Card -->
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <img src="https://source.unsplash.com/400x300/?burger" class="card-img-top" alt="Burger">
                    <div class="card-body">
                        <h5 class="card-title">Classic Burger</h5>
                        <p class="card-text">$9.99</p>
                        <a href="#" class="btn btn-primary">Order Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <img src="https://source.unsplash.com/400x300/?burger" class="card-img-top" alt="Burger">
                    <div class="card-body">
                        <h5 class="card-title">Cheese Lover's Burger</h5>
                        <p class="card-text">$12.99</p>
                        <a href="#" class="btn btn-primary">Order Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <img src="https://source.unsplash.com/400x300/?burger" class="card-img-top" alt="Burger">
                    <div class="card-body">
                        <h5 class="card-title">Double Patty Burger</h5>
                        <p class="card-text">$14.99</p>
                        <a href="#" class="btn btn-primary">Order Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- About Section -->
    <div id="about-section" class="container my-5 text-center">
        <h2>About Us</h2>
        <p class="mt-3">We pride ourselves on serving the freshest and most delicious burgers. Come taste the difference!</p>
    </div>
    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3">
        <p class="mb-0">© 2025 Hampshire Hmbrgr. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>