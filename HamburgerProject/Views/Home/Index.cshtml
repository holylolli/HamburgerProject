<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .card img {
            height: 200px;
            object-fit: cover;
        }

        .carousel-inner img {
            /* Ekranın tamamını kaplar */
            object-fit: cover; /* Resmi konteynerin tamamına uyacak şekilde kırpar */
        }
        .carousel-item img {
            width: 100%;
            height: 300px; /* Yüksekliği daraltmak için */
            object-fit: cover; /* Görselin kare ya da dikdörtgen olmasını engeller, kare olursa kesilmesin diye */
        }
        .carousel {
            max-width: 90%; /* Genişliği biraz artırmak için */
            margin: auto; /* Ortalamak için */
        }
    </style>
</head>

<body>
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <a href="#menu-section" class="btn btn-warning btn-lg mt-3">Explore Menu</a>
        </div>
    </div>
        <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/carousel1.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img src="~/images/carousel2.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img src="~/images/carousel3.jpg" class="d-block w-100" alt="">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Navbar -->    
        <div class="container">              
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    
    <!-- Menu Section -->
    <div id="menu-section" class="container my-5">
        <h2 class="text-center mb-4">Our Menu</h2>
        <div class="row">
            <!-- Example of a Menu Card -->
            @foreach(var menu in Model)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm mb-4">
                        <img src="@menu.ImagePath" class="card-img-top" alt="@menu.Name">
                        <div class="card-body">
                            <h5 class="card-title">@menu.Name</h5>
                            <p class="card-text">@menu.Price.ToString()</p>
                            <p class="card-text">@menu.Description</p>
                            <a href="#" class="btn btn-primary">Order Now</a>
                        </div>
                    </div>
                </div>
