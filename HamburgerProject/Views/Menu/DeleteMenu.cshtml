@model HamburgerProject.Models.Menu

@{
    ViewData["Title"] = "Delete Menu";
}


<div class="container mt-5">
    <h2>Are you sure you want to delete this menu?</h2>

    <div class="alert alert-warning" role="alert">
        <strong>Warning!</strong> This action is irreversible.
    </div>

    <div class="mb-3">
        <label for="Name" class="form-label">Menu Name</label>
        <input asp-for="Name" class="form-control" id="Name" readonly>
    </div>

    <div class="mb-3">
        <label for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control" id="Price" readonly>
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" id="Description" rows="3" readonly></textarea>
    </div>

    <form asp-action="DeleteMenu" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete Menu</button>
        <a href="@Url.Action("Index", "Menu")" class="btn btn-secondary">Cancel</a>
    </form>
</div>