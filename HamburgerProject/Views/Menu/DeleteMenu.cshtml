@model HamburgerProject.Models.Menu

@* @{
    ViewData["Title"] = "Delete Menu";
} *@

<div class="container mt-5">
    <h2 class="text-danger">Delete Confirmation</h2>
    <p>Are you sure you want to delete the menu item <strong>@Model.Name</strong>?</p>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Menu Details</h5>
            <p><strong>Name:</strong>@Model.Name</p>
            <p><strong>Price:</strong>@Model.Price.ToString()</p>
            <p><strong>Description:</strong>@Model.Description</p>
        </div>

        <!-- Delete Form -->
        <form asp-controller="Menu" asp-action="DeleteMenuConfirmed" asp-route-id="@Model.Id" method="post" class="mt-4">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Menu" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

