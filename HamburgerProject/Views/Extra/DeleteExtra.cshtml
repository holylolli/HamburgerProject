@model HamburgerProject.Models.Extra

@{
    ViewData["Title"] = "Delete Extra";
}

<div class="container mt-4">
    <h1>Are you sure you want to delete this extra?</h1>

    <div>
        <p>Name: @Model.Name</p>
        <p>Price: @Model.Price.ToString("C")</p>
    </div>

    <form asp-controller="Extra" asp-action="DeleteConfirmed" asp-controller="Extra" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>