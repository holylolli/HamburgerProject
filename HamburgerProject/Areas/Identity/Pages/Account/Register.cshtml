@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background: url('/images/register.jpg') no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
    }

</style>

<div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow-lg p-4" style="width: 30rem; border-radius: 10px;">
        <div class="text-center mb-4">
            <h2 class="text-primary">Hampshire Brgr Login</h2>
            <p class="text-muted">There is one step left to grab a plate</p>
        </div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" autocomplete="new-password" placeholder="Password" />
                <label asp-for="Input.Name">Name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Surname" class="form-control" autocomplete="new-password" placeholder="Password" />
                <label asp-for="Input.Surname">Surname</label>
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Register Button -->
            <div class="d-grid">
                <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Hesap Oluştur</button>
            </div>

            <!-- Links -->
            <div class="text-center mt-3">
                <a href="/Account/Login" class="link-secondary">Zaten bir hesabınız var mı? Giriş yapın.</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}